<!-- adding html header welcome, and the user's name -->
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<!-- header to plan a new trip -->
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Plan a new trip:</h3>

<!-- area to input trip information -->
    <form class="form new-trip-form">
      <div class="form-group">
        <label for="trip-name">trip name:</label>
        <input class="form-input" type="text" id="trip-name" name="trip-name" />
      </div>
      <div class="form-group">
        <label for="trip-destination">trip-destination:</label>
        <input class="form-input" type="text" id="trip-destination" name="trip-destination" />
      </div>
      <div class="form-group">
        <label for="project-desc">description:</label>
        <textarea class="form-input" id="trip-desc" name="trip-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if trips.length}}
  <div class="col-md-6 project-list">
    <h3>Current Trips:</h3>

    {{#each trips as |trip|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/trip/{{trip.id}}">{{trip.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{trip.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../public/js/profile.js"></script>